[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  unstage = reset HEAD --
  last = log -1 HEAD
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  fco = !git branch | fzf +m | awk '{print $1}' | xargs git checkout
[user]

[core]
	editor = /usr/local/bin/nvim
	excludesfile = ~/.gitignore_global
[commit]
[pull]
	rebase = true
[rebase]
	autoStash = true
[color]
  ui = auto
[fetch]
	prune = true
